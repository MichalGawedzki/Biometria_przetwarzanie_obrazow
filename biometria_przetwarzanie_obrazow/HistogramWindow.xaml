<Window x:Class="biometria_przetwarzanie_obrazow.HistogramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:biometria_przetwarzanie_obrazow"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="HistogramWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10, 0">
            <TextBlock Text="A: " FontSize="18"/>
            <TextBox x:Name="stretchA" Width="50" Margin="5, 0" FontSize="18"/>
            <TextBlock Text="B: " FontSize="18"/>
            <TextBox x:Name="stretchB" Width="50" Margin="5, 0" FontSize="18"/>
            <Button x:Name="stretchButton" Content="Stretch" Margin="10, 1" Width="60" Height="25" ToolTip="Stretch histogram to full 8-bit scale" Click="stretchButton_Click"></Button>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10, 0"/>
            <Button x:Name="lightenButton" Content="Lighten" Margin="10, 0" Width="60" Height="25" ToolTip="Lighten the image"></Button>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10, 0"/>
            <Button x:Name="darkenButton" Content="Darken" Margin="10, 0" Width="60" Height="25" ToolTip="Darken the image"></Button>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10, 0"/>
            <Button x:Name="evenButton" Content="Even" Margin="10, 0" Width="60" Height="25" ToolTip="Even the histogram"></Button>
        </StackPanel>

        <lvc:CartesianChart Series="{Binding SeriesCollection}" LegendLocation="Right" Grid.Column="1" Grid.Row="2" Margin="0, 5, 0, 0">
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Amount" LabelFormatter="{Binding YFormatter}" MinValue="0"></lvc:Axis>
            </lvc:CartesianChart.AxisY>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Value" Labels="{Binding Labels}"></lvc:Axis>
            </lvc:CartesianChart.AxisX>
        </lvc:CartesianChart>

        <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Margin="5, 0" Width="60" Height="25" ToolTip="Cancel all changes"></Button>
            <Button Content="Apply" Margin="5, 0" Width="60" Height="25" ToolTip="Apply on editable image in previous window"></Button>

        </StackPanel>
    </Grid>
</Window>
